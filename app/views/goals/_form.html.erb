<%= form_with(model: goal) do |form| %>
  <% if goal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(goal.errors.count, "error") %> prohibited this goal from being saved:</h2>

      <ul>
        <% goal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-form__control">
    <%= form.label :title, 'Goal Title:' %>
    <%= form.text_field :title, placeholder: 'e.g. named vocabulary in pictures -visual/verbal/max cues' %>
  </div>

  <div class="my-form__control">
    <%= form.label :goal_type, 'Goal Type:' %>
    <%= form.select :goal_type, %w[LTG STG] %>
  </div>

  <div class="my-form__control">
    <%= form.label :more_info, 'More Information:' %>
    <%= form.text_area :more_info, placeholder: 'e.g. Expressive/Pragmatic Language - book (the tiny seed)' %>
  </div>

  <div class="my-form__control">
    <%= form.submit class: 'my-form__action-btn' %>
  </div>
<% end %>
