<h1>Patients#index</h1>

<table>
  <thead>
    <th>id</th>
    <th>Name</th>
  </thead>
  <tbody>
    <% @patients.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.name %></td>
        <td><%= link_to 'Plan of care', patient_plan_of_cares_path(p) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
