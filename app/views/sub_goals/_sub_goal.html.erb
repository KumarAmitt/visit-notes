
<div class="tile">
  <div class="content">
    <strong>Sub Goal:</strong>
    <%= sub_goal.title %> ||
  </div>
  <div class="links">
    <% if role == 'admin' %>
      <%= link_to "Add word", new_goal_sub_goal_word_path(goal, sub_goal) %> ||
      <%= link_to "Edit", edit_goal_sub_goal_path(goal, sub_goal) %>
      <%= button_to "Delete", [goal, sub_goal], method: :delete, class: :button %>
    <% end %>

    <% if role == 'therapist' %>
      <% if !@patient.sub_goals.exists?(sub_goal.id) %>
        <%= link_to 'Create Note', new_patient_comment_path(@patient, {sub_goal_id: sub_goal.id}) %>
      <% end %>
    <% end %>
  </div>
</div>

<br>

<% sub_goal.words.each do |word| %>
  <%= render word, goal: goal, sub_goal: sub_goal, role: role %>
<% end %>

<br>


