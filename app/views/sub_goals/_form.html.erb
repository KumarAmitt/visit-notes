<%= form_with(model: [@goal, sub_goal], local: true) do |form| %>
  <% if sub_goal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(sub_goal.errors.count, "error") %> prohibited this sub_goal from being saved:</h2>

      <ul>
        <% sub_goal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-form__info">
    <span>Goal:</span>
    <%= @goal.title %>
  </div>

  <div class="my-form__control">
    <%= form.label :title, 'Sub-Goal Title' %>
    <%= form.text_field :title, placeholder: 'e.g. /sh/ IWP imitative' %>
  </div>

  <div class="my-form__control">
    <%= form.submit class: 'my-form__action-btn' %>
  </div>
<% end %>
